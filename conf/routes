# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main pages
GET     /                           @controllers.Application.index
GET     /projects                   @controllers.Application.projects(categoryId: Option[ObjectId])
GET     /projects/all               @controllers.Application.allProjects
GET     /projects/:id               @controllers.Application.project(id: ObjectId)

# Add (import) project
GET     /addproject                 @controllers.AddProject.index
POST    /uploadpom                  @controllers.AddProject.uploadPom
POST    /reviewproject              @controllers.AddProject.reviewProject
POST    /createproject              @controllers.AddProject.createProject

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
